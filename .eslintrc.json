{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["xo", "prettier"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/consistent-type-definitions": [
          "error",
          "interface"
        ],
        "no-unused-vars": "error",
        "no-console": "error",
        "no-new": 0
      }
    },
    {
      "files": ["src/**/models/*.ts"],
      "rules": {
        "@typescript-eslint/naming-convention": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
